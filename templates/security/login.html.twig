{% extends 'base.html.twig' %}
{% block title %}connexion{% endblock %}
{% block body %}
<div class="container ">
 <form method="post">
  {% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData,'security')}}</div>
  {% endif %}
  {% if app.user %}
    <div class="mb-3">tu es connecté sur {{ app.user.username }}, 
      <a href="{{ path('app_logout') }}">déconnexion</a>
    </div>
  {% endif %}
    <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}"name="email" id="inputEmail" 
           class="form-control mt-2 mb-2" autocomplete="email" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control mt-2 mb-2"
           autocomplete="current-password" required>
    <input type="hidden" name="_csrf_token"value="{{ csrf_token('authenticate') }}">
    <button class="btn btn-lg btn-primary mt-2 mb-4" type="submit">connexion</button>
  </form>
</div>
{% endblock %}