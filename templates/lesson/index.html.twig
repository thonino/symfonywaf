{% extends 'base.html.twig' %}

{% block title %}leçons Tarif{% endblock %}

{% block body %}
<div class="d-flex flex-column align-items-center">
    <h1 class="text-center">Acheter Une Leçon </h1>
    <a class="btn btn-success"style="max-width: 350px;" href="{{ path('app_lesson_new') }}">Nouvelle Leçon</a>
</div>
<div class="d-flex justify-content-center flex-wrap ">
    {% for lesson in lessons %}
        <div class="card m-2 text-light" style="max-width: 300px;">
            <div class="col-12">
                <div class="card-body">
                        <h5 class="card-card text-center text-warning fs-1">{{ lesson.price }}€ </h5>
                        <h5 class="card-card">{{ lesson.name }} </h5>
                        <h5 class="card-text">{{ lesson.title }}</h5>
                        <span class="d-flex justify-content-center">
                        <a class="btn btn-warning mb-2 mt-2 text-dark" href="{{ path('cart_add', {'lesson' : lesson.id})}}">Ajouter au panier</a><br>
                        <a class="btn btn-primary mb-2 mt-2 mx-1" href="{{ path('app_lesson_show', {'id': lesson.id}) }}">Détail</a>
                        </span>
                </div>
            </div>
        </div>
    {% else %}
        <p>votre panier est vide</p>
    {% endfor %}
</div>
{% endblock %}
