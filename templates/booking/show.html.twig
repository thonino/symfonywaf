{% extends 'base.html.twig' %}
{% block title %}Booking{% endblock %}
{% block body %}
<div class="container bg-secondary mt-2 pb-2"style="border-radius:10px">
    <h1 class="scroll">Réservation</h1>
    <table class="table">
        <tbody >
            <tr class="scroll">
                <th>Reservation n°</th>
                <td>{{ booking.id }}</td>
            </tr>
            <tr class="scroll">
                <th>title</th>
                <td>{{ booking.title }}</td>
            </tr>
            <tr class="scroll">
                <th>Start</th>
                <td>{{ booking.start ? booking.start|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <a class="scroll btn btn-success mb-2 " href="{{ path('app_booking_edit', {'id': booking.id}) }}">Modifier</a><br>
    {% if is_granted('ROLE_ADMIN') %}
        {{ include('booking/_delete_form.html.twig') }}
    {% endif %}
    <a class="scroll btn btn-primary " href="{{ path('app_booking_index') }}">Retour</a>
</div>
{% endblock %}
