{% extends 'base.html.twig' %}
{% block title %}leçons Tarif{% endblock %}
{% block body %}
<div class="d-flex flex-column align-items-center">
    
    <h2 class="scroll text-center text-secondary mt-2 "><i class="bi bi-book"></i><br> Acheter Un Cours </h2>
    {% if is_granted('ROLE_ADMIN') %}
    <a class="scroll btn btn-success"style="max-width: 350px;" href="{{ path('app_lesson_new') }}">Nouvelle Leçon</a>
    {% endif %}
</div>
    <div class="d-flex justify-content-center flex-wrap ">
        {% for lesson in lessons %}
            <div class="scroll card m-2 text-light bg-leger" style="max-width: 300px;">
                <div class="col-12">
                    <img src="/img/{{lesson.image}}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-card text-center text-warning fs-1">{{ lesson.price }}€ </h5>
                        <h5 class="card-card text-secondary text-center">{{ lesson.name }} </h5>
                        <h5 class="card-text text-center text-white">{{ lesson.title }}</h5>
                        <span class="d-flex justify-content-center">
                        <a class="btn btn-warning mb-2 mt-2 text-white" href="{{ path('cart_add', {'lesson' : lesson.id})}}">Ajouter au panier</a><br>
                        <a class="btn btn-primary mb-2 mt-2 mx-1" href="{{ path('app_lesson_show', {'id': lesson.id}) }}">Détail</a>
                        </span>
                    </div>
                </div>
            </div>
        {% else %}
            <p>votre panier est vide</p>
        {% endfor %}
    </div>
<div><br><br></div>
{% endblock %}
