<!DOCTYPE html>
<html>
    <head>
        <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
        <link rel="icon" href="/favicon.ico" type="image/x-icon">
            <meta charset="UTF-8">
            {% block head %}{% endblock %}
            <title>{% block title %}WA Formation{% endblock %}</title>
        {# Bootstrap & css // templates/base.html.twig #}
        <link href="{{ asset('bootstrap.min.css')}}" rel="stylesheet">
        <link href="{{ asset('css/styles.css')}}" rel="stylesheet"> 
        <link href="{{ asset('bootstrapIcons/bootstrap-icons.css')}}" rel="stylesheet"> 
    </head>
<body class="bg-white mb-5"style="margin-top:40px">
    <style>
        .font-1 {font-family: 'Poiret One';}
        .font-2 {font-family: 'Bad Script';}
        .navbar-toggler {padding: 2px 4px !important;} 
        .navbar-toggler-icon{width:20px ;height:25px;}
    </style>
{# NavBar#}
    <nav class="navbar py-0 navbar-expand-sm navbar-dark bg-dark fixed-top">
        <div class="scroll container-fluid">
            <a class="navbar-brand" href="{{ path('app_home') }}">
            <p class="text-info d-inline font-1"style=";margin-right:-8px">W<span 
            class="text-success">A</span><span class="text-white">FORMATION</span></p></a>
            <button class="navbar-toggler navbar-toggler-sm "type="button" data-bs-toggle="collapse"data-bs-target="#navbarSupportedContent" 
                    aria-controls="navbarSupportedContent"aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="{{ path('app_lesson_index') }}">
                        <i class="bi bi-book"></i>
                        <p class="d-inline d-md-inline d-sm-none"> Cours</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="{{ path('app_calendar') }}">
                        <i class="bi bi-calendar-date"></i>
                        <p class="d-inline d-md-inline d-sm-none "> Calendrier</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="{{ path('app_booking_index') }}">
                        <i class="bi bi-pencil"></i>
                        <p class="d-inline d-md-inline d-sm-none "> RDV</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="{{ path('app_invoices') }}">
                        <i class="bi bi-receipt-cutoff"></i>
                        <p class="d-inline d-md-inline d-sm-none "> Factures</p>
                    </a>
                </li>
                {# <li class="nav-item">
                    <a class="nav-link " aria-current="page" href="{{ path('app_invoice_new') }}">Commande</a>
                </li> #}
                </ul>
                <ul class="navbar-nav ms-auto mb-lg-0">
                    <li class="nav-item" >
                        <a class="nav-link active" aria-current="page" href="{{ path('cart_show') }}">
                            <i class="bi-cart text-white "></i>
                            <p class="d-inline d-md-inline d-sm-none ">Pannier</p>
                        </a>
                    </li>
                {% if app.user %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item" >
                            <a class="nav-link active" aria-current="page" href="{{ path('app_admin') }}">
                                <i class="bi bi-gear-fill"></i>
                                <p class="d-inline d-lg-inline d-md-none d-sm-none ">Admin</p>
                            </a>
                        </li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/users/{{app.user.id}}">
                            <i class="bi bi-file-earmark-person"></i>
                            <p class="d-inline d-lg-inline d-md-none d-sm-none ">Compte</p>
                        </a>
                    </li>            
                    <li class="nav-item"style="margin-left:-5px">
                        <a class="nav-link active" aria-current="page" href="{{ path('app_logout') }}">
                            <i class="bi bi-power"></i>
                            <p class="d-inline d-lg-inline d-md-none d-sm-none ">Déconnexion</p>
                        </a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('app_login') }}">
                            <i class="bi bi-person"></i>
                            Connexion
                        </a>
                    </li>
                {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <!-- FOOTER -->
    <footer class="scroll text-center bg-dark fixed-bottom ">
        <div class="text-center ">
                <span class="text-light mx-2">WAFORMATION</span>
                <span class="text-light mx-2">1 Rue de la joie, 75001, Paris, France</span>
                <span class="text-light mx-2">contact@waformation.fr</span>
                <a class="text-light mx-2" href="{{ path('app_mentions_legales') }}">Mentions-Légales</a>
                <a class="text-light mx-2" href="{{ path('app_confidential') }}">Politique de confidentialité</a>
                <a class="text-light mx-2" href="{{ path('app_cgv') }}">CGV</a>
                <a class="text-success mx-2 bold" href="{{ path('app_home_contact') }}">Me Contacter</a>
        </div>
    </footer> 
    

<!-- Twig Render Cookies -->
{{ render(controller("App\\Controller\\CookiesController::cookies")) }}

        {% block body %}{% endblock %}
        {# bootstrap & js #}
        <script src="{{ asset('bootstrap.bundle.min.js')}}" defer>
        </script><script src="{{ asset('js/index.js')}}" defer></script>
        <script src="https://unpkg.com/scrollreveal"></script>
    </body>
</html>