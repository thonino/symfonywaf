{% extends 'base.html.twig' %}
{% block title %}Hello HomeController!{% endblock %}
{% block body %}
<style>.cookies{  width: 200px;height: 35px;bottom: 24px; border-radius: 25px;}</style>

<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="img/i1.jpg " class="d-block w-100" alt="..." style="max-height:420px">
            <div class="carousel-caption d-none d-sm-block" style="top:-10px">
                <h3>Maitriser son <span class="text-info"> PC </span> ou son <span class="text-success"> Téléphone </span> </h3> 
                <h5 class="text-white">( Formation pour novice )</h5>
                <a href="{{ path('app_lesson_index') }}"><p class="btn btn-success">Voir Les Leçons </p> </span></a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="img/i2.jpg" class="d-block w-100" alt="..." style="max-height:420px">
            <div class="carousel-caption d-none d-sm-block" style="top:-10px">
                <h3>Cours d'informatique  à domicile</h3>
                <h5 class="text-white">Vérifier mes disponibilités :</h5>
                <a href="{{ path('app_calendar') }}"><p class="btn btn-success">Calendier</p></a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="img/i3.jpg" class="d-block w-100" alt="..." style="max-height:420px">
            <div class="carousel-caption d-none d-sm-block" style="top:-10px">
                <h3>Déplacements en Ile de France</span></h3>
                <h5 class="text-white">Pour plus d'informations : </h5>
                <a href="#"><p class="btn btn-success">Contactez moi</p></a>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev carousel-dark" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Précédent</span>
    </button>
    <button class="carousel-control-next carousel-dark" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Suivant</span>
    </button>
</div>

<div class="scroll d-flex flex-column align-items-center bg-white" >
    <div class="d-flex flex-row justify-content-end p-2 bg-white"style="margin-bottom:-30px">
        <!--waformafion-->
        <div class="col-12 bg-white">
            <div class="d-flex justify-content-center header flex-column">
                <div class="d-flex justify-content-center mb-1">
                    <img  style="margin-bottom:-20px;margin-top:-5px"src="/img/logo.png" width="100px" height="100px"alt="logo"/>
                </div>
                <div class="d-flex justify-content-center"style="margin-bottom:-60px">
                    <p class="text-info d-inline tailleTxt">W<span class="text-success">A</span><span class="text-dark">FORMATION</span></p>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-2 d-flex flex-column">
        <div class="d-flex justify-content-center">
                <div class="d-flex justify-content-center">
                    <img src="img/top1.png" class="scroll d-none d-lg-inline mb-2 mx-2" alt="...">
                    <img src="img/top2.png" class="scroll d-none d-md-inline mb-2 mx-2" alt="...">
                    <img src="img/top3.png" class="scroll mb-2 mx-2" alt="...">
            </div>
        </div>
    </div>
</div>
    <!-- Achat Cours -->
    <div class="d-flex flex-column align-items-center bg-white" style="margin-top:-10px">
        <h1 class="scroll text-center text-secondary">Acheter un cours </h1>
    </div>
    <div class="d-flex justify-content-center flex-wrap bg-white pb-5">
        {% for lesson in lessons %}
            <div class="scroll card m-2 text-light" style="max-width: 200px;border-radius:20px">
                <div class="col-12">
                    <img src="/img/{{lesson.image}}" class="card-img-top" alt="..." style="border-top-left-radius:20px;border-top-right-radius:20px">
                    <div class=" card-body ">
                            <h5 class="card-card text-center text-warning fs-3"style="margin-top:-10px">{{ lesson.price }}€ </h5>
                            <h5 class="card-card text-white text-center fs-5"style="margin-top:-10px">{{ lesson.name }} </h5>
                            <h5 class="card-text text-center fs-6">{{ lesson.title }}</h5>
                            <span class="d-flex justify-content-center">
                            <a class="btn btn-warning mb-2 mt-2 text-white fs-6" href="{{ path('cart_add', {'lesson' : lesson.id})}}">
                            + Panier</a><br>
                            <a class="btn btn-primary mb-2 mt-2 mx-1" href="{{ path('app_lesson_show', {'id': lesson.id}) }}">Détail</a>
                            </span>
                    </div>
                </div>
            </div>
        {% else %}
            <p>votre panier est vide</p>
        {% endfor %}
    </div>

<!-- cookies -->
<div class=" text-light text-center bg-secondary fixed-bottom cookies opacity-75 m-2" >
    <div class="text-center m-1">
        Accepter les Cookies
    <a class="text-warning bold ok " href="#">OK</a>
    </div>
</div>

{% endblock %}
