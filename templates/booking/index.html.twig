{% extends 'base.html.twig' %}

{% block title %}Booking index{% endblock %}

{% block body %}

<div class="container bg-secondary mt-2 pb-2"style="border-radius:10px">
    <h1>Reservation booking</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Numero</th>
                <th>Prénom</th>
                <th>Date RDV</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr>
                <td>{{ booking.id }}</td>
                <td>{{ booking.title  }}</td>
                <td>{{ booking.start ? booking.start|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                <div class="d-flex m-0">
                    <a class="btn btn-primary m-0 mx-2"href="{{ path('app_booking_show', {'id': booking.id}) }}">Détails</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        {{ include('booking/_delete_form.html.twig') }}
                    {% endif %}

                    </div>
                </td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas de reservation</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-success " href="{{ path('app_booking_new') }}">Nouveau RDV</a>
    {% endif %}
    <a class="btn btn-primary mx-1" href="{{ path('app_calendar')}}">Calendrier</a>
</div>
{% endblock %}