{% extends 'base.html.twig' %}
{% block title %}Detail Lesson{% endblock %}
{% block body %}

<div class="container">
    <h1>Detail Lesson</h1>
    <table class="table">
        <tbody>
            <tr><th>Id</th><td>{{ lesson.id }}</td></tr>
            <tr><th>Name</th><td>{{ lesson.name }}</td></tr>
            <tr><th>Price</th><td>{{ lesson.price }}</td></tr>
            <tr><th>Title</th><td>{{ lesson.title }}</td></tr>
            <tr><th>Description</th><td>{{ lesson.description }}</td></tr>
            <tr><th>Image</th><td>{{ lesson.image }}</td></tr>
        </tbody>
    </table>
    <a class="btn btn-warning mb-2 mt-2" href="{{ path('cart_add', {'lesson' : lesson.id})}}">Ajouter au panier</a>
    <a class="btn btn-primary mb-2 mt-2 mx-1" href="{{ path('app_lesson_index') }}">Retour</a><br>
    <a class="btn btn-success mb-2" href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">Modifier</a>
    {{ include('lesson/_delete_form.html.twig') }}
</div>

    
{% endblock %}
