{% extends 'base.html.twig' %}
{% block title %}connexion{% endblock %}
{% block body %}
<div class="d-flex justify-content-center">
  <div class="container bg-secondary m-2 pb-2"style="border-radius:10px">
    <form method="post">
      {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData,'security')}}</div>
      {% endif %}
        <h1 class="h4 mt-2 font-weight-normal">Se connecter</h1>
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}"name="email" id="inputEmail" 
              class="form-control mt-2 mb-2" autocomplete="email" required autofocus>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control mt-2 mb-2"
              autocomplete="current-password" required>
        <input type="hidden" name="_csrf_token"value="{{ csrf_token('authenticate') }}">
        <div class="mt-2">
          <button class="btn btn-lg btn-primary"  type="submit">
            <div style="margin-top:-5px;margin-left:-3px">
              <i class="bi bi-person fs-3"></i>
              <span class="fs-5"style="margin-left:3px"> Connexion </span> 
            </div>
          </button>
        </div>
        <div class="mt-2">
            <a class="btn btn-lg btn-success" aria-current="page" href="{{ path('app_register') }}">
              <div style="margin-top:-5px" >
                <i class="bi bi-person-plus fs-3"></i><span class="fs-5"> S'inscrire</span> 
              </div>
            </a>
        </div>
    </form>
  </div>
</div>

{% endblock %}