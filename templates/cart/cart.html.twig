{% extends 'base.html.twig' %}
{% block title %} panier{% endblock %}
{% block body %}
<div class="container bg-secondary mt-2 pb-1"style="border-radius:10px;min-height:180px">
    <table class="table">
        <thead class="scroll">
            <tr>
                <th class="fs-4 text-warning">Votre Panier</th>
                <th class="fs-4 text-warning">Prix</th>
                <th class="fs-4">Quantité</th>
            </tr>
        </thead>
        <tbody>
        {% for row in cartLessons %}
        <form method="post">
            <tr class="scroll">
                <td  class="fs-5">{{ row.lesson.name }}  <span  class="text-light fs-6">{{ row.lesson.title }}</span><br>
                    {# creation booking form & Liaison avec $totalQty #}
                    {% if row.quantite != 0 %}
                        {% for i in 1 .. row.quantite  %}
                            <input class=" mt-2" type="text" placeholder="Votre Pseudo" name='title{{i}}{{row.lesson.id}}'/><br>
                            <input class="datetime" type="datetime-local" name="start{{i}}{{row.lesson.id}}"/><br>
                        {% endfor %}
                    {% endif %}
                </td>
                <td class="fs-4">{{ row.lesson.price }} €</td>
                <td class=" fs-4">
                    <a href="{{ path('cart_less', {'lesson':row.lesson.id}) }}"><i class="bi bi-file-minus-fill fs-4 mx-2 text-danger"></i></a>
                    {{ row.quantite }} H
                    <a href="{{ path('cart_add', {'lesson':row.lesson.id}) }}"><i class="bi bi-plus-square-fill fs-4 mx-2 text-warning"></i></a>
                    <a href="{{ path('cart_del', {'lesson':row.lesson.id}) }}"><i class="bi bi-trash fs-4 mx-2 text-danger"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td class="scroll" colspan="2"> Aucun article ajouté </td>         
            </tr>  
        {% endfor %}
            </tbody>            
        </table>
            <div class="mb-2 ">
                {% if cartLessons != [] %}
                    <p class="scroll fs-4 border border-4 rounded text-warning p-1 mx-2 mb-2"style="float:left ;margin-top:-12px;"> 
                        Total : 
                        <span class="text-white fs-4"> {{ total }} € </span>
                    </p>
                    <button class="scroll btn btn-success">commander</button>
                {% endif %}
            </div>
        </form>
</div>
{% endblock %}