{% extends 'base.html.twig' %}
{% block title %}Reservation{% endblock %}
{% block body %}
<div class="d-flex justify-content-center">
    <div class="scroll container bg-secondary m-2 pb-2" style="border-radius:10px">
        <h1 class="scroll">Reservation</h1>
        <table class="table">
            <thead>
                <tr class="scroll ">
                    <th>Numero</th>
                    <th>Pseudo</th>
                    <th>Date RDV</th>
                    <th>Nom Prénom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for booking in bookings %}
                <tr class="scroll ">
                    <td>{{ booking.id }}</td>
                    <td>{{ booking.title  }}</td>
                    <td>{{ booking.start ? booking.start|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ booking.firstname }} {{ booking.lastname }}</td>
                    <td>
                        <div class="d-flex">
                            {% if app.user or is_granted('ROLE_ADMIN') %}
                                <a class="btn btn-primary mx-2 " href="{{ path('app_booking_show', {'id': booking.id}) }}" style="margin-bottom:10px">Détails</a>
                                {% if is_granted('ROLE_ADMIN') %}
                                    {{ include('booking/_delete_form.html.twig') }}
                                {% endif %}
                            {% endif %}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Pas de reservation</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-success " href="{{ path('app_booking_new') }}">Nouveau RDV</a>
        {% endif %}
        <a class="scroll btn btn-primary mx-1" href="{{ path('app_calendar')}}">Calendrier</a>
    </div>
</div>
{% endblock %}