{% extends 'base.html.twig' %}
{% block title %} panier{% endblock %}
{% block body %}
<div class="container bg-secondary mt-2 pb-2"style="border-radius:10px">
    <table class="table">
        <thead>
            <tr>
                <th class="fs-4 text-warning">Votre Panier</th>
                <th class="fs-4 text-warning">Prix</th>
                <th class="fs-4">Quantité</th>
            </tr>
        </thead>
        <tbody>
            {% for row in cartLessons %}
            <form method="post">
        <tr>
                <td  class="fs-5">{{ row.lesson.name }}  <span  class="text-light fs-6">{{ row.lesson.title }}</span><br>
                    {# creation booking form    #}
                    {# <input class="m-2" type="text" placeholder="Prénom" name="title"/>
                    <input class="datetype" type="datetime-local" name="start"/> #}
                        {# creation booking form & Liaison avec $totalQty #}
    {% if row.quantite != 0 %}
        {% for i in 1 .. row.quantite  %}
            <input class="mx-2 mt-2" type="text" placeholder="Prénom" name="title{{i}}"/>
            <input class="datetype" type="datetime-local" name="start{{i}}"/>
            <br>
        {% endfor %}
    {% endif %}
    
                </td>
            <td class="fs-4">{{ row.lesson.price }} €</td>
            <td class=" fs-4">
                <a href="{{ path('cart_less', {'lesson':row.lesson.id}) }}"><i class="bi bi-file-minus-fill fs-4 mx-2 text-danger"></i></a>
                {{ row.quantite }} H
                <a href="{{ path('cart_add', {'lesson':row.lesson.id}) }}"><i class="bi bi-plus-square-fill fs-4 mx-2 text-warning"></i></a>
                <a href="{{ path('cart_del', {'lesson':row.lesson.id}) }}"><i class="bi bi-trash fs-4 mx-2 text-danger"></i></a></td>
        </tr>
        {% else %}
            <tr>
                <td colspan="2"> Aucun article ajouté </td>            
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <input  type="submit" name="test" class="btn btn-success mx-2 mt-2 " />

        {# <button  type="submit" class="btn btn-success mx-2">Valider</button> #}
    </form>
    <p class="fs-4 border border-4 rounded px-2 text-warning"style="float:right"> Total : 
    <span class="text-white fs-4 mb-2"> {{ total }} € </span></p>
        {% if cartLessons != [] %}
    <a  class="fs-5 text-success rounded border border-success border-4 p-1 mx-2"
        style="float:right;text-decoration:none;"href="{{ path('app_invoice_new')}}"> 
        Commander 
    </a>
{% endif %}
</div>

{% endblock %}